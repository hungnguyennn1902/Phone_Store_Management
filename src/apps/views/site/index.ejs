                <!--	Feature Product	-->
                <div class="products">
                    <h3>Sản phẩm nổi bật</h3>
                    <div class="product-list card-deck">
                        <%for(product of featured){%>
                        <div class="product-item card text-center">
                            <a href="/product-<%=product.slug%>.<%=product._id%>"><img src="../images/<%=product.thumbnail%>"></a>
                            <h4><a href="/product-<%=product.slug%>.<%=product._id%>"><%=product.name%></a></h4>
                            <p>Giá Bán: <span><%=product.price%>đ</span></p>
                        </div>
                        <%}%>
                    </div>
                   
                </div>
                <!--	End Feature Product	-->
                
                
                <!--	Latest Product	-->
                <div class="products">
                    <h3>Sản phẩm mới</h3>
                    <div class="product-list card-deck">
