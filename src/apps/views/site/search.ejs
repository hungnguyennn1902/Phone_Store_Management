<%- include("./layouts/head", {title:"Search"})%>
<%- include("./layouts/header")%>
<%- include("./layouts/menu")%>
<%- include("./layouts/slider")%>
                
                <!--	List Product	-->
                <div class="products">
                    <div id="search-result">Kết quả tìm kiếm với sản phẩm <span><%=keyword%></span></div>
                    <div class="product-list card-deck">
                        <%for(product of products){%>
                        <div class="product-item card text-center">
                            <a href="/product-<%=product.slug%>.<%=product._id%>"><img src="../images/<%=product.thumbnail%>"></a>
                            <h4><a href="/product-<%=product.slug%>.<%=product._id%>"><%=product.name%></a></h4>
                            <p>Giá Bán: <span><%=product.price%>đ</span></p>
                        </div>
                        <%}%>
                    </div>
                  
                </div>
                <!--	End List Product	-->
                
                <div id="pagination">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="#">Trang trước</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Trang sau</a></li>
                    </ul> 
                </div>
                
